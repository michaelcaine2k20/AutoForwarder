# Telegram API credentials (get from https://my.telegram.org/auth)
TELEGRAM__API_ID=your_api_id_here
TELEGRAM__API_HASH=your_api_hash_here

# Your phone number in international format
TELEGRAM__PHONE=+1234567890

# Bot token (optional, if using bot instead of user account)
TELEGRAM__BOT_TOKEN=bot_token

# Channel configuration
# Source channels to monitor (comma-separated list of usernames or channel IDs)
TELEGRAM__CHANNELS=channel1,channel2,channel3

# Target channel ID where messages will be forwarded/sent
TELEGRAM__TARGET_CHANNEL_ID=123456789

# Forward mode (true = forward with original sender, false = send as new message)
TELEGRAM__FORWARD=false 